<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:context="http://www.springframework.org/schema/context" xmlns:util="http://www.springframework.org/schema/util"
  xmlns:aop="http://www.springframework.org/schema/aop" xmlns:p="http://www.springframework.org/schema/p" xmlns:tx="http://www.springframework.org/schema/tx"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context-2.5.xsd
                           http://www.springframework.org/schema/aop
                           http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
                           http://www.springframework.org/schema/util
                           http://www.springframework.org/schema/util/spring-util-2.0.xsd
                           http://www.springframework.org/schema/tx
                           http://www.springframework.org/schema/tx/spring-tx-2.5.xsd">

  <context:annotation-config />
  <context:spring-configured />
  
  <!-- Creates a PropertiesBuilderFactory -->
  <bean id="propertiesBuilderFactory" class="net.zcarioca.zcommons.config.util.PropertiesBuilderFactory">
    <constructor-arg index="0" value="false"/>
    <constructor-arg index="1" value="true"/>
  </bean>
  
  <!-- Sets the configuration utilities and providers -->
  <util:constant static-field="net.zcarioca.zcommons.config.source.spi.FilesystemConfigurationSourceProvider.CONFIGURATION_SOURCE_SERVICE_PROVIDER" id="fileConfigurationProviderId"/>
  
  <bean id="configurationUtilities" class="net.zcarioca.zcommons.config.util.ConfigurationUtilities"
     factory-method="getInstance">
    <property name="propertiesBuilderFactory" ref="propertiesBuilderFactory"/>
  </bean>
  
  <!--  This adds the mock provider to the mapping  -->
  <bean class="net.zcarioca.zcommons.config.source.ConfigurationSourceProviderMapper" factory-method="getInstance">
    <property name="associations">
      <map>
        <entry key="net.zcarioca" value-ref="fileConfigurationProviderId"/>
      </map>
    </property>
  </bean>
  
  <!--  This will trigger processing of @PostConstruct and @PreDestroy -->
  <bean class="org.springframework.context.annotation.CommonAnnotationBeanPostProcessor" />
  
  <!--  This processes the @ConfiguredAttribute annotations -->
  <bean id="confPostProcessor" class="net.zcarioca.zcommons.config.spring.ConfigurationInjectionPostProcessor">
    <property name="reconfigureOnUpdateEnabled" value="true" />
  </bean>

  <context:component-scan base-package="net.zcarioca" />
  
  <bean id="configuredObject" class="net.zcarioca.zcommons.config.spring.ConfigurableObject"/>

</beans>